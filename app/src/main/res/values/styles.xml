<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="login_edt" parent="AppTheme">
        <item name="android:layout_marginLeft">@dimen/_35sdp</item>
        <item name="android:layout_marginRight">@dimen/_35sdp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/_40sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingLeft">@dimen/_10sdp</item>
    </style>

    <style name="ball_txtView" parent="AppTheme">
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:background">@drawable/ball_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="run_txtView" parent="AppTheme">
        <item name="android:layout_height">@dimen/_30sdp</item>
        <item name="android:layout_width">@dimen/_30sdp</item>
        <item name="android:background">@drawable/create_match</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="batsmen_txtView" parent="AppTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/textHeading</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
