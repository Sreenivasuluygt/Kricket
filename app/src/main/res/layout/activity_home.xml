<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="obu.ckt.cricket.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/appBackground"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_logout_home"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_logout" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_createMatch_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/create_match"
        android:gravity="center|start"
        android:minHeight="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_10"
        android:text="@string/create_match"
        android:textSize="@dimen/sp_15" />

    <RelativeLayout
        android:background="@drawable/create_match"
        android:layout_width="match_parent"

        android:layout_margin="@dimen/dp_5"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:paddingLeft="@dimen/dp_10"
            android:text="Add League match"
            android:textSize="@dimen/sp_15" />
        <TextView
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_5"
            android:gravity="center|start"
            android:minHeight="@dimen/dp_40"
            android:text="Coming soon"
            android:textColor="#ec3d3d"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_matches_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
