<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_15sdp"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginStart="@dimen/_15sdp"
    android:minHeight="@dimen/_30sdp"
    android:orientation="horizontal"
    android:weightSum="1">

    <obu.ckt.cricket.comon.RegularTextView
        android:id="@+id/tv_bowlerName_item"
        style="@style/batsmen_txtView"
        android:layout_weight="0.4"
        android:layout_height="match_parent"
        android:text="Bowler"
        android:gravity="center|start"
        android:textColor="@color/textColor" />

    <obu.ckt.cricket.comon.RegularTextView
        android:id="@+id/tv_bowlerOvers_item"
        style="@style/batsmen_txtView"
        android:layout_weight="0.2"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="Overs"
        android:textColor="@color/textColor" />

    <obu.ckt.cricket.comon.RegularTextView
        android:layout_height="match_parent"
        android:id="@+id/tv_bowlerRuns_item"
        style="@style/batsmen_txtView"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="Runs"
        android:textColor="@color/textColor" />

    <obu.ckt.cricket.comon.RegularTextView
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:id="@+id/tv_wickets_item"
        style="@style/batsmen_txtView"
        android:layout_weight="0.2"
        android:gravity="center"
        android:text="Wickets"
        android:textColor="@color/textColor" />

</LinearLayout>