<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    android:orientation="vertical"
    tools:context="obu.ckt.cricket.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:padding="@dimen/dp_35"
            android:src="@mipmap/ic_logo" />

        <ImageView
            android:id="@+id/iv_back_sign_up"
            android:layout_margin="@dimen/dp_5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/dp_5"
            android:src="@drawable/ic_back" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_name_sing_up"
            style="@style/login_edt"
            android:hint="@string/name"
            android:inputType="textEmailAddress"
            android:maxLength="30" />

        <EditText
            android:id="@+id/et_email_sing_up"
            style="@style/login_edt"
            android:layout_marginTop="@dimen/dp_15"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_password_sing_up"
            style="@style/login_edt"
            android:layout_marginTop="@dimen/dp_15"
            android:hint="@string/password"
            android:inputType="textWebPassword" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_sing_up"
            style="@style/login_edt"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/btnColor"
            android:elevation="@dimen/dp_5"
            android:text="@string/sign_up"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            app:elevation="@dimen/dp_5" />


    </LinearLayout>

</LinearLayout>
